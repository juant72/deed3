{
  // üöÄ ULTRA PERFORMANCE CONFIG FOR COPILOT CHAT STABILITY
  // TypeScript optimizations for large projects
  "typescript.preferences.maxInlayHintLength": 20,
  "typescript.suggest.maxSize": 3000,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.includeCompletionsWithInsertText": false,
  "typescript.preferences.includeCompletionsForImportStatements": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.suggest.autoImports": false,
  "typescript.suggest.paths": false,
  "typescript.suggest.completeFunctionCalls": false,
  "typescript.preferences.maximalWorkspaceSizeForInlayHints": 200,
  // üíæ MEMORY OPTIMIZATIONS (Critical for Copilot)
  "files.maxMemoryForLargeFilesMB": 16384,
  "typescript.tsserver.maxTsServerMemory": 16384,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,
  // üéØ EDITOR PERFORMANCE (Disable heavy features)
  "editor.maxTokenizationLineLength": 1000,
  "editor.semanticHighlighting.enabled": false,
  "editor.wordBasedSuggestions": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.minimap.enabled": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.tabCompletion": "off",
  "editor.wordBasedSuggestionsMode": "allDocuments",
  // üî• COPILOT OPTIMIZATIONS (Prevent memory leaks)
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "json": false,
    "jsonc": false
  },
  "github.copilot.advanced": {
    "listCount": 1,
    "inlineSuggestCount": 1,
    "length": 500
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  // üìÅ FILE WATCHING (Reduce I/O load)
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/coverage/**": true,
    "**/tmp/**": true,
    "**/.cache/**": true,
    "**/*.log": true,
    "**/target/**": true,
    "**/.vscode/**": true,
    "**/public/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true,
    "**/tmp": true,
    "**/.cache": true,
    "**/*.log": true,
    "**/target": true,
    "**/public": true
  },
  "files.watcherInclude": [
    "**/*.ts",
    "**/*.tsx"
  ],
  // üõ†Ô∏è TYPESCRIPT SERVER OPTIMIZATIONS
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "fixedPollingInterval",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/.next",
      "**/dist",
      "**/build"
    ]
  },
  // üé® WORKBENCH OPTIMIZATIONS (Reduce UI load)
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "right",
  // üîß GIT OPTIMIZATIONS (Reduce background tasks)
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.autoStash": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": false,
  "git.fetchOnPull": false,
  "git.pruneOnFetch": false,
  "git.showProgress": false,
  // üñ•Ô∏è TERMINAL OPTIMIZATIONS
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.renderer": "dom",
  "terminal.integrated.fontFamily": "Consolas",
  "terminal.integrated.fontSize": 12,
  // üìä TELEMETRY & PRIVACY (Reduce network calls)
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "npm.fetchOnlinePackageInfo": false,
  // üîç SEARCH OPTIMIZATIONS
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.followSymlinks": false,
  "search.smartCase": false,
  // üìù FILE ASSOCIATIONS
  "files.associations": {
    "*.json": "jsonc"
  },
  // ‚ö° EXPERIMENTAL PERFORMANCE FLAGS
  "typescript.experimental.aiCodeActions": false,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": false,
  "typescript.suggest.includeCompletionsForImportStatements": false,
  "typescript.preferences.includeCompletionsWithSnippetText": false,
  // üß† INTELLISENSE LIMITS (Critical for stability)
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  // üéØ FINAL PERFORMANCE TWEAKS
  "problems.maxNumberOfProblems": 100,
  "outline.problems.enabled": false,
  "breadcrumbs.enabled": false,
  "debug.console.fontSize": 12,
  "debug.console.lineHeight": 16
}